<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title><%= typeof title !== 'undefined' ? (title + ' | Magyar Városok Portál') : 'Magyar Városok Portál' %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 – ingyenes, reszponzív téma -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
        crossorigin="anonymous"
    >

    <!-- Saját CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="d-flex flex-column min-vh-100 bg-light">

    <!-- ÚJ, EGYSÉGES NAVIGÁCIÓ -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="<%= base_path %>/">Városok.hu</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Navigáció váltása">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">

                <!-- Bal oldali menü -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="<%= base_path %>/">Főoldal</a></li>
                    <li class="nav-item"><a class="nav-link" href="<%= base_path %>/adatbazis-lista">Városlista</a></li>
                    <li class="nav-item"><a class="nav-link" href="<%= base_path %>/kapcsolat">Kapcsolat</a></li>
                </ul>

                <!-- Jobb oldali menü -->
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="<%= base_path %>/uzenetek">Üzenetek</a>
                        </li>

                        <% if (user.szerepkor === 'admin') { %>
                            <li class="nav-item">
                                <a class="nav-link" href="<%= base_path %>/admin/varosok">Admin (CRUD)</a>
                            </li>
                        <% } %>

                        <li class="nav-item">
                            <a class="nav-link" href="<%= base_path %>/kijelentkezes">Kijelentkezés (<%= user.nev %>)</a>
                        </li>

                    <% } else { %>
                        <li class="nav-item"><a class="nav-link" href="<%= base_path %>/bejelentkezes">Bejelentkezés</a></li>
                        <li class="nav-item"><a class="nav-link" href="<%= base_path %>/regisztracio">Regisztráció</a></li>
                    <% } %>

                </ul>

            </div>
        </div>
    </nav>

    <!-- Üzenetek + oldal tartalom -->
    <div class="container flex-grow-1 py-4">

        <% if (messages && messages.success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= messages.success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <% if (messages && messages.error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= messages.error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>
