<%- include('../../partials/header') %>

<main class="py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h4 fw-bold mb-3">Új város felvitele</h1>
                    <p class="text-muted mb-4">
                        Adja meg az új város alapadatait, majd mentse el.
                    </p>

                    <form action="<%= base_path %>/admin/varos/uj" method="POST" class="vstack gap-3">

                        <div>
                            <label for="nev" class="form-label">Város neve</label>
                            <input type="text" id="nev" name="nev" class="form-control" required>
                        </div>

                        <div>
                            <label for="megyeid" class="form-label">Megye</label>
                            <select id="megyeid" name="megyeid" class="form-select" required>
                                <option value="">Válasszon megyét...</option>
                                <% megyek.forEach(megye => { %>
                                    <option value="<%= megye.id %>"><%= megye.nev %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="form-check">
                            <input type="checkbox" id="megyeszekhely" name="megyeszekhely" value="1" class="form-check-input">
                            <label for="megyeszekhely" class="form-check-label">Megyeszékhely?</label>
                        </div>

                        <div class="form-check">
                            <input type="checkbox" id="megyeijogu" name="megyeijogu" value="1" class="form-check-input">
                            <label for="megyeijogu" class="form-check-label">Megyei jogú város?</label>
                        </div>

                        <div class="d-flex justify-content-between mt-3">
                            <a href="<%= base_path %>/admin/varosok" class="btn btn-outline-secondary">
                                Vissza a listához
                            </a>
                            <button type="submit" class="btn btn-primary">
                                Város létrehozása
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../../partials/footer') %>
