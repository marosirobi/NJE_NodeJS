<%- include('../partials/header') %>

<main class="py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4 fw-bold mb-0">Beérkezett üzenetek</h1>
        <span class="badge bg-primary">
            <%= uzenetek ? uzenetek.length : 0 %> üzenet
        </span>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <% if (!uzenetek || uzenetek.length === 0) { %>
                <p class="m-3 text-muted">Még nincs egyetlen üzenet sem.</p>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table table-striped mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Név</th>
                                <th>Email</th>
                                <th>Üzenet</th>
                                <th>Dátum</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% uzenetek.forEach(function(uzenet, index) { %>
                                <tr>
                                    <td><%= index + 1 %></td>
                                    <td><%= uzenet.nev %></td>
                                    <td><%= uzenet.email %></td>
                                    <td style="max-width: 400px;"><%= uzenet.uzenet %></td>
                                    <td>
                                        <%= uzenet.letrehozva
                                            ? new Date(uzenet.letrehozva).toLocaleString('hu-HU')
                                            : '' %>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
