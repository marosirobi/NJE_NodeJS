<%- include('../partials/header') %>

<main class="py-4">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h1 class="h4 fw-bold mb-3 text-center">Regisztráció</h1>
                    <p class="text-muted text-center mb-4">
                        Hozzon létre fiókot, hogy üzeneteket küldhessen és elérje a rendszer funkcióit.
                    </p>

                    <form method="post" action="<%= base_path %>/regisztracio">
                        <div class="mb-3">
                            <label for="nev" class="form-label">Név</label>
                            <input type="text" class="form-control" id="nev" name="nev" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email cím</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="mb-3">
                            <label for="jelszo" class="form-label">Jelszó</label>
                            <input type="password" class="form-control" id="jelszo" name="jelszo" required>
                        </div>

                        <div class="mb-3">
                            <label for="jelszo2" class="form-label">Jelszó ismét</label>
                            <input type="password" class="form-control" id="jelszo2" name="jelszo2" required>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            Regisztráció
                        </button>

                        <div class="text-center">
                            <small class="text-muted">
                                Már van fiókja?
                                <a href="<%= base_path %>/bejelentkezes">Bejelentkezés</a>
                            </small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer') %>
